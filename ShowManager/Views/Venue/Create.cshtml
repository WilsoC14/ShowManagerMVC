@model ShowManager.Models.VenueCreate

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="detail-block col-md-10 col-md-offset-1">
        <div class="headline">
            <h2 id="objectName">
                <p>Create a New Venue</p>
            </h2>
        </div>
        <br />
        <br />
        <div class="row col-md-12">
            <div class="form-horizontal">
                <div class="col-md-5 col-md-offset-1">
                    <div class="form-group">
                        @Html.LabelFor(model => model.VenueName,"Venue Name", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-7 ">
                            @Html.EditorFor(model => model.VenueName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VenueName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                        <div class="col-md-7 col-md-offset-1">
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-5 ">
                    <div class="form-group">
                        @Html.LabelFor(model => model.VenueType, "Venue Type", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EnumDropDownListFor(e => e.VenueType, "Select Venue Type", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VenueType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12" id="submit_btns">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <div class="action-links">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
