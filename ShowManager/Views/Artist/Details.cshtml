@model ShowManager.Models.ArtistDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ArtistDetail</h4>
    <hr />
    <dl class="dl-horizontal">
          
        @Html.HiddenFor(model => model.ArtistID)


        <dt>
            @Html.DisplayNameFor(model => model.ArtistName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArtistName)
        </dd>
   

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            History of Shows
        </dt>
        @foreach(var show in Model.ListOfShows)
        {
            <dd>
                @show.ShowName
            </dd>
          
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ArtistID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
