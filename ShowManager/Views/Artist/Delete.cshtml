@model ShowManager.Models.ArtistDetail

@{
    ViewBag.Title = "Delete";
}


@Html.HiddenFor(model => model.ArtistID)
<div class="container col-md-8 col-md-offset-2 detail-block">
    <div class="headline">
        <h1>Would You Like To Delete This Artist?</h1>
        <h2 id="objectName">
            @Html.DisplayFor(model => model.ArtistName)
        </h2>
    </div>
    <hr />
    <div class="row">
        <div class="table_block col-md-4">
            <h4> Artist Community</h4>
            <ul class="data_list">
                @foreach (var artist in Model.ArtistCommunity)
                {
                    <li>
                        @artist.ArtistName
                    </li>
                }
            </ul>
        </div>
        <div class="table_block col-md-4">
            <h4> History of Shows</h4>
            <ul class="data_list">
                @foreach (var show in Model.ListOfShows)
                {
                    <li>
                        @show.ShowName
                    </li>
                }

            </ul>
        </div>
        <div class="table_block col-md-4">
            <h4> Venues Played</h4>
            <ul class="data_list">
                @foreach (var venue in Model.VenuesPlayed)
                {
                    <li>
                        @venue.VenueName
                    </li>
                }
            </ul>
        </div>
    </div>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="action-links">
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    }
</div>
