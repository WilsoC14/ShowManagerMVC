@model IEnumerable<ShowManager.Models.ArtistListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArtistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        @Html.HiddenFor(modelItem => item.ArtistID)
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>         
                        @Html.ActionLink("Edit", "Edit", new { id = item.ArtistID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ArtistID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ArtistID })
            </td>
        </tr>
    }

</table>
