@model ShowManager.Models.ArtistEdit

@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ArtistID)

    <div class="detail-block col-md-8 col-md-offset-2">
        <div class="headline">
            <h2 id="objectName">
                @Html.DisplayFor(model => model.ArtistName)
            </h2>
        </div>
        <hr />
        <div class="form">
            <div class="row col-md-10 ">
                <div class="col-md-offset-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ArtistName, htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-md-4 col-md-offset-1">
                            @Html.EditorFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ArtistName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-offset-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-md-4 col-md-offset-1 ">
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
            <br/>
            <br/>
                <div class="col-md-12">
                    <div class="form-group" id="submit_btns">
                        <div>
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="action-links">
            @Html.ActionLink("Artist Details", "Details", new { id = Model.ArtistID }) |
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
