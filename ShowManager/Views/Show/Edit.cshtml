@model ShowManager.Models.ShowEdit

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Your Show</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ShowID)
   



<div class="detail-block col-md-10 col-md-offset-1">
    <h2 id="objectName">
        @Html.DisplayFor(model => model.ShowName)
    </h2>
    <hr />
    <div class="row" id="editor_artistList">
        <!-- form & artist list-->
        <div class="col-md-5 col-md-offset-1">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.ShowName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-7 col-md-offset-2">
                        @Html.EditorFor(model => model.ShowName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ShowName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.VenueID, "Venue", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-7 col-md-offset-2">
                        @Html.DropDownList("VenueID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VenueID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateOfShow, "Date", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-7 col-md-offset-2">
                        @Html.EditorFor(model => model.DateOfShow, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.VenueID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-md-offset-1">
            <h4>Artist Line Up</h4>
            <ul id="artist_lineup">
                @foreach (var artist in Model.ListOfArtist)
                {
                    <li class="artist_lineup_item">
                        @artist.ArtistName
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12" id="submit_btns">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
    <div class="row action-links">
        @Html.ActionLink("Add Artist", "AddArtistToShow", new { showID = Model.ShowID }) |
        @Html.ActionLink("Back to Detail", "Details", new { id = Model.ShowID }) |
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>


}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
