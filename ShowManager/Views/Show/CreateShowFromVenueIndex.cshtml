@model ShowManager.Models.ShowCreate

@{
    ViewBag.Title = "CreateFromVenueIndex";
}

<h2>CreateFromVenueIndex</h2>


@using (Html.BeginForm("Create", "Show"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.VenueID)
    <div class="detail-block col-md-8 col-md-offset-2">
        <div class="headline">
            <h2 id="objectName">
                @ViewBag.VenueName
            </h2>
        </div>
        <hr />
        <div class="form">
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-offset-1">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ShowName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.ShowName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ShowName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DateOfShow, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.DateOfShow, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DateOfShow, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
                <br/>
                <br />
                <div class="form-group" id="submit_btns">
                    <div class="col-md-offset-2 col-md-2">
                        <input type="submit" value="Create Show" class="btn btn-default" />
                    </div>
                </div>
        </div>
           
        <div class="col-md-6 action-links">
            @Html.ActionLink("Venue Detail", "Details", "Venue", new { id = Model.VenueID }, null) |
            @Html.ActionLink("Back to Venue List", "Index", "Venue") |
            @Html.ActionLink("All Shows", "Index")
        </div>
        </div> <!--closing tag for detail block-->
        }


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
